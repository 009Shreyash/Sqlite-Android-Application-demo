<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.practicleapp">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".SplashActivity"
            android:theme="@style/AppTheme_NoAction"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MainUsersListActivity"
            android:label="Record List"
            android:screenOrientation="portrait"/>
        <activity
            android:name=".ModifyCountryActivity"
            android:label="Modify Record"
            android:theme="@android:style/Theme.DeviceDefault.Light.Dialog"
            android:screenOrientation="portrait"
            />
        <activity
            android:name=".AddRecordActivity"
            android:label="Add Record"
            android:screenOrientation="portrait"
             />
    </application>

</manifest>